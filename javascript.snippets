snippet fun "function (fun)" !b
function ${1:name}(${3:arg}) {
	${0:// body...}
}
endsnippet

snippet funa "anonymous function (funa)" !
function(${1:arg}) {
	${0:// body...}
}
endsnippet

snippet for "for" !b
for (var ${2:i} = 0, l = ${1:Things}.length; $2 < l; $2++) {
	${0:// code..}
endsnippet

snippet if "if" !b
if (${1:condition}) {
	${0://code}
}
endsnippet

snippet ife "if ___ else" !b
if (${1:condition}) {
	${2://code}
} else {
	${3://code}
}
endsnippet
